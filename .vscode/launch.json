{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug C++",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/main.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Ativar formatação de impressão para gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "Compilar C",
          "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
          "logging": {
              "engineLogging": true
          },
          "internalConsoleOptions": "neverOpen",
          "launchCompleteCommand": "exec-run"
      }
  ]
}
